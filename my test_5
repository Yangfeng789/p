#include<stdio.h>//多个字符向中间汇集
#include<stdlib.h>
#include<windows.h>
#include<string.h>
int main()
{
  char arr1[]=" welcome to bit !!!!!!";
  char arr2[]=" ##################### ";
  int left=0;
  //int right=sizeof(arr1)/sizeof(arr1[0])-2;
  int right=strlen(arr1)-1;
  while(left<=right)
  {
   arr2[left]=arr1[left];
   arr2[right]=arr1[right];
   printf("%s\n",arr2);
   Sleep(1000);
   system("cls");
   left++;
   right--;
   }
 
  printf("%s\n",arr2);
  return 0;
 }
