#include<stdio.h>
int main()
{
	int a=1;
	int b=~a;
	printf("%d\n",b);//00000000000000000000000000000001
	//取反：11111111111111111111111111111110
	return 0;//反：11111111111111111111111111111110
	//补：11111111111111111111111111111101
	//原：10000000000000000000000000000010



}
